{
  "manifest_version": 3,
  "name": "Hello Edge",
  "description": "Minimal MV3 template for Microsoft Edge.",
  "version": "1.0.0",
  "action": {
    "default_title": "Hello Edge",
    "default_popup": "popup.html"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "128": "icons/icon-128.png",
    "16": "icons/icon-16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
